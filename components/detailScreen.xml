<?xml version="1.0" encoding="UTF-8"?>
<component name="detailScreen" extends="Group">

	<script type="text/brightscript" uri="pkg:/components/detailScreen.brs" />
	<interface>
		<field id="content" type="node" />
	</interface>

	<children>

	<Rectangle 
        id = "rect" 
        color = "0x000000FF" 
        opacity = "0.65" 
        width = "1280" 
        height = "720" 
        scaleRotateCenter = "[ 256.0, 144.0 ]">

  <MaskGroup maskUri="pkg:/images/detailPageGradient.png" maskSize="[1280,720]" maskOffset="[300,0]">
	   	<Poster id="detailBackgroundPoster" translation = "[ 0, 0 ]" 
        width = "1280" 
        height = "720" 
        opacity = "0.55" />
	    	</MaskGroup>

		  <Label
		translation="[150, 150]" width="1000"
  		id="detailMainTitle"
  		height="44"
  		horizAlign = "left"
  		vertAlign = "center" >
		  
	    		<Font role="font" uri="pkg:/font/AvenirNextBold/AvenirNext-BoldItalic.ttf" size="20"/>
	    	</Label>
		  
		   <Label
		translation="[150, 200]" width="1000"
  		id="durationText"
  		height="44"
		  text="Duration : "
  		horizAlign = "left"
  		vertAlign = "center" >
		  
	    		<Font role="font" uri="pkg:/font/AvenirNextBold/AvenirNext-BoldItalic.ttf" size="20"/>
	    	</Label>

  <Label
		translation="[250, 200]" width="1000"
  		id="duration"
  		height="44"
  		horizAlign = "left"
  		vertAlign = "center" >
		  
	    		<Font role="font" uri="pkg:/font/AvenirNextBold/AvenirNext-BoldItalic.ttf" size="20"/>
	    	</Label>

			
		   <Label
		translation="[300, 200]" width="1000"
  		id="minutesText"
  		height="44"
		  text="minutes"
  		horizAlign = "left"
  		vertAlign = "center" >
		  
	    		<Font role="font" uri="pkg:/font/AvenirNextBold/AvenirNext-BoldItalic.ttf" size="20"/>
	    	</Label>


		     <Label 
        id="detailDescription" 
        translation="[150,250]"
         width="500"
          height="200"
          horizAlign = "left"
          wrap="true" numLines="10"
          vertAlign = "top"
           lineSpacing="1"
         >
	    		<Font role="font" uri="pkg:/font/AvenirNextBold/AvenirNext-BoldItalic.ttf" size="20"/>
	    	</Label>

	<ButtonGroup id="detailScreenButton" buttonHeight="65" layoutDirection="horiz" translation="[100,500]"/>

	    	<Video id="DetailsScreenVideo" visible="false" />
   </Rectangle>
		<Video id ="videoNode" visible="false"></Video>
	</children>
</component>
